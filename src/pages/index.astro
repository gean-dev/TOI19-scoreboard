---
import Layout from "../layouts/Layout.astro";
import Scoreboard from "../components/Scoreboard.svelte";
---

<Layout title="Ranking - Gean Dev Pre TOI19">
  <main class="w-full text-white">
    <div class="min-h-screen flex flex-col text-center" id="greet">
      <div class="mx-auto w-full flex-1 px-4">
        <div class="flex justify-center items-center flex-col text-center pt-20 text-6xl font-thin">
          <span>IPST-2.2<span class="text-orange-500"> Ranking</span></span>
        </div>
        <div class="overflow-x-auto py-20">
          <Scoreboard client:load></Scoreboard>
        </div>
      </div>
      <div class="mb-5">
        <p class="text-xl">
          Made with ❤️ by <a href="https://github.com/ttamx">ttamx</a>
        </p>
      </div>
    </div>
  </main>
</Layout>